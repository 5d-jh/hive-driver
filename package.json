{
  "name": "hive-driver",
  "version": "0.0.1",
  "description": "Driver for connection to Apache Hive via Thrift API.",
  "main": "index.js",
  "directories": {
    "example": "examples",
    "test": "tests"
  },
  "scripts": {
    "e2e": "env HIVE_E2E_LOG=FILE mocha 'tests/e2e/**/*.test.js' --timeout=300000",
    "test": "mocha 'tests/unit/**/*.test.js'",
    "build": "tsc",
    "watch": "tsc -w",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lenchv/hive-js/"
  },
  "keywords": [
    "hiveserver2",
    "apache",
    "hive",
    "hive",
    "hs2",
    "kerberos",
    "sasl",
    "ldap",
    "hadoop",
    "client",
    "thrift"
  ],
  "author": "Liench Volodymyr",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^13.1.4",
    "chai": "^4.2.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "get-fqdn": "0.0.4",
    "kerberos": "^1.1.3",
    "mocha": "^5.2.0",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "thrift": "0.12.0",
    "node-int64": "^0.4.0"
  }
}
